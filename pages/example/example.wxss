#todo{
  padding: 10px 20px;
}

.input-task{
  display: flex;
  flex-direction: row;
  justify-content: center;
  overflow: hidden;
  height: 40px;
  padding: 10px 0;
  gap:10px;
}

.input-task input[type="text"] {
  flex: 8;
  border-radius: 10px;
  border: 1px solid black;
  height: 100%;
  padding:0px 10px;
}

.input-task button {
  padding: 0;
  flex: 2;
  background-color: black;
  color: white;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.tasks {
  margin-top: 20px;
}

.task {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.task-left {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 10px;
}

.task button {
  width: 30px;
  background-color: white;
  display: flex;
  justify-content: center;
  align-content: center;
}

.text-checked {
  text-decoration: line-through;
  color: gray;
}