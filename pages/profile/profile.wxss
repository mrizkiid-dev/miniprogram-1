.container {
  padding: 10px 20px;
}

.profile-container {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  align-content: center;

  width: 100%;
  min-height: 80px;
  padding: 10px;
  border-radius: 15px;
  overflow: hidden;
  background: rgba(138, 187, 219, 0.25);
  box-shadow: 2px 2px 10px #F1F2F3;
}

.profile-detail {
  margin-left: 20px;
  display: flex;
  flex-direction: column;
}

.profile-container .image{
  width: 70px;
  height: 70px;
  border-radius: 100px;
  border: 1px solid black;
}

.profile-container .name {
  font-weight: bold;
  font-size: 20px;
}